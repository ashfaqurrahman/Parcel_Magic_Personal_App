<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/splash_bg_gradient_start_end"
    tools:context=".ui.SplashActivity"
    android:fitsSystemWindows="false">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/splash_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_splash_bg"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_marginBottom="-16dp"
        android:layout_alignBottom="@+id/splash_bg"
        android:id="@+id/splash_progress_icon"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_air_parcel_logo"/>

</RelativeLayout>