<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        tools:context=".ui.product.ConfirmReceiverAddressFragment"
        android:id="@+id/root_layout">

        <androidx.cardview.widget.CardView
            android:id="@+id/back"
            app:cardCornerRadius="18dp"
            android:backgroundTint="#f3f3f3"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_keyboard_backspace"
                android:padding="9dp"/>

        </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <fragment
                    android:id="@+id/mapReceiverDetails"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@id/layout"/>

                <LinearLayout
                    android:id="@+id/layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentBottom="true">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="none"
                        android:paddingBottom="90dp">

                        <LinearLayout
                            android:id="@+id/bottom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bottom_sheet_bg"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="15dp"
                                android:elevation="10dp"
                                android:orientation="vertical"
                                android:id="@+id/parent"
                                android:animateLayoutChanges="true">

                                <!--<View
                                    android:layout_width="30dp"
                                    android:layout_height="4dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_gravity="center_horizontal"
                                    android:background="@drawable/button_bg"/>-->

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="15dp"
                                        android:layout_alignParentStart="true"
                                        android:fontFamily="@font/poppins_semibold"
                                        android:textStyle="normal"
                                        android:textSize="14sp"
                                        android:textColor="#0f122f"
                                        android:lineSpacingExtra="10sp"
                                        android:text="@string/delivery_charge" />

                                    <TextView
                                        android:id="@+id/charge"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginTop="15dp"
                                        android:fontFamily="@font/poppins_semibold"
                                        android:textStyle="normal"
                                        android:textSize="14sp"
                                        android:textColor="#0f122f"
                                        android:lineSpacingExtra="10sp"
                                        android:text="BDT 114.33" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/button_bg"
                                    android:layout_marginTop="18dp"
                                    android:padding="15dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins_semibold"
                                        android:textStyle="normal"
                                        android:textSize="14sp"
                                        android:textColor="#1a1a1a"
                                        android:lineSpacingExtra="47sp"
                                        android:text="@string/who_will_pay"
                                        />

                                    <RadioGroup
                                        android:id="@+id/radioGroup"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="18dp"
                                        android:orientation="horizontal">

                                        <RadioButton
                                            android:id="@+id/sender"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginEnd="30dp"
                                            android:gravity="center_vertical"
                                            android:fontFamily="@font/poppins_medium"
                                            android:textStyle="normal"
                                            android:checked="true"
                                            android:textSize="15sp"
                                            android:padding="10dp"
                                            android:text="Sender"/>

                                        <View
                                            android:id="@+id/divider1"
                                            android:layout_width="0.3dp"
                                            android:layout_height="match_parent"
                                            android:background="@color/gray"
                                            />

                                        <RadioButton
                                            android:id="@+id/receiver"
                                            android:gravity="center_vertical"
                                            android:layout_marginStart="30dp"
                                            android:padding="10dp"
                                            android:fontFamily="@font/poppins_medium"
                                            android:textStyle="normal"
                                            android:textSize="15sp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Recipient"/>

                                    </RadioGroup>

                                </RelativeLayout>

                                <TextView
                                    android:id="@+id/cash_on_delivery"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:drawablePadding="15dp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textStyle="normal"
                                    android:textSize="15sp"
                                    android:textColor="#0f122f"
                                    android:lineSpacingExtra="8sp"
                                    android:text="@string/cash_on_delivery"
                                    android:visibility="gone"
                                    app:drawableStartCompat="@drawable/ic_taka"
                                    />

                            </LinearLayout>

                        </LinearLayout>

                    </ScrollView>

                </LinearLayout>

            </RelativeLayout>

        <LinearLayout
            android:id="@+id/confirm_receiver_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/after_button_bg"
            android:padding="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:textStyle="normal"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="18sp"
                android:text="@string/confirm_delivery" />

        </LinearLayout>

    </RelativeLayout>

</layout>