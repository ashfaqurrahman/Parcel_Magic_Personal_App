<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialogParent"
    style="@style/df_dialog_layout">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:elevation="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="end"
                android:src="@drawable/ic_cross_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textStyle="bold"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:textSize="20sp"
                android:textColor="#0f122f"
                android:gravity="center_horizontal"
                android:text="Please select your\n product type"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_marginBottom="25dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/fragile"
                    android:layout_width="0dp"
                    android:layout_height="85dp"
                    app:cardBackgroundColor="#e8f0fe"
                    android:layout_marginStart="15dp"
                    app:cardCornerRadius="7dp"
                    android:layout_marginEnd="7dp"
                    app:cardElevation="0dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/fragile_select"
                            android:layout_width="match_parent"
                            android:layout_height="85dp"
                            android:visibility="gone"
                            android:background="@drawable/rectangle_border">

                            <ImageView
                                android:layout_width="13dp"
                                android:layout_height="13dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginEnd="3dp"
                                android:padding="3dp"
                                android:layout_alignParentEnd="true"
                                android:src="@drawable/ic_right_icon"
                                android:background="@drawable/circle_solid_blue"/>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_fragile"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:fontFamily="@font/poppins_regular"
                                android:textStyle="normal"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:textSize="13sp"
                                android:textColor="#0f122f"
                                android:text="Fragile"
                                />

                        </LinearLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/liquid"
                    android:layout_width="0dp"
                    android:layout_height="85dp"
                    app:cardBackgroundColor="#e6f4ea"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="6dp"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="0dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/liquid_select"
                            android:layout_width="match_parent"
                            android:layout_height="85dp"
                            android:visibility="gone"
                            android:background="@drawable/rectangle_border">

                            <ImageView
                                android:layout_width="13dp"
                                android:layout_height="13dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginEnd="3dp"
                                android:padding="3dp"
                                android:layout_alignParentEnd="true"
                                android:src="@drawable/ic_right_icon"
                                android:background="@drawable/circle_solid_blue"/>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_liquid"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:fontFamily="@font/poppins_regular"
                                android:textStyle="normal"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:textSize="13sp"
                                android:textColor="#0f122f"
                                android:text="Liquid"
                                />

                        </LinearLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/solid"
                    android:layout_width="0dp"
                    android:layout_height="85dp"
                    app:cardBackgroundColor="#fef7e0"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="15dp"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="0dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/solid_select"
                            android:layout_width="match_parent"
                            android:layout_height="85dp"
                            android:visibility="gone"
                            android:background="@drawable/rectangle_border">

                            <ImageView
                                android:layout_width="13dp"
                                android:layout_height="13dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginEnd="3dp"
                                android:padding="3dp"
                                android:layout_alignParentEnd="true"
                                android:src="@drawable/ic_right_icon"
                                android:background="@drawable/circle_solid_blue"/>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_solid"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:fontFamily="@font/poppins_regular"
                                android:textStyle="normal"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:textSize="13sp"
                                android:textColor="#0f122f"
                                android:text="Solid"
                                />

                        </LinearLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/product_details_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                style="@style/MyTextInputLayout"
                android:visibility="gone"
                app:errorEnabled="false">

                <EditText
                    android:id="@+id/product_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    android:hint="@string/product_details"
                    android:imeOptions="actionNext"
                    style="@style/MyTextInputEditText"
                    android:maxLines="1"/>

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/next_layout"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="35dp">

                <TextView
                    android:id="@+id/proceed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/after_button_bg"
                    android:gravity="center"
                    android:paddingStart="120dp"
                    android:paddingTop="18dp"
                    android:paddingEnd="120dp"
                    android:paddingBottom="17dp"
                    android:text="@string/next"
                    android:textSize="15sp"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>