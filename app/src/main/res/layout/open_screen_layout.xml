<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FCFCFF">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/text"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_logo_light" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/next"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:fontFamily="@font/poppins_medium"
            android:lineSpacingExtra="9sp"
            android:text="Sign in with mobile number"
            android:textColor="#0f122f"
            android:textSize="18sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:fontFamily="@font/poppins_regular"
            android:padding="18dp"
            android:text="Continue"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/after_button_bg"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/tv_terms_condition_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/next"
            android:layout_alignEnd="@+id/next"
            android:layout_below="@+id/next"
            android:layout_marginTop="28dp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textSize="12sp"
            android:textColor="@color/text_color"
            android:lineSpacingExtra="10sp"
            android:gravity="center_horizontal"
            android:text="@string/by_useing"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_open_screen_bg" />

    </RelativeLayout>

</layout>