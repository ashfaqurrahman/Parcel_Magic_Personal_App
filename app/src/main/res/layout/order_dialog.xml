<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.my_order.MyParcelFragment">

    <com.airposted.bohon.ui.widget.SimpleTextCursorWheelLayout
        android:id="@+id/test_circle_menu_left"
        android:layout_width="280dip"
        android:layout_height="280dip"
        app:wheelBackgroundColor="@color/white"
        android:layout_gravity="end|top"
        android:layout_marginEnd="-140dip"
        app:wheelItemRotateMode="outward"
        app:wheelSelectedAngle="180">

        <com.airposted.bohon.ui.widget.SwitchButton
            android:id="@id/id_wheel_menu_center_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:boardWidth="0dip"
            app:uncheckRevealColor="#3B5998"
            app:checkRevealColor="#3B5998"/>
    </com.airposted.bohon.ui.widget.SimpleTextCursorWheelLayout>

</FrameLayout>