<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/welcome_bd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/ic_welcome" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp"
                android:layout_alignEnd="@+id/welcome_bd"
                android:layout_alignBottom="@+id/welcome_bd"
                android:scaleType="fitXY"
                android:src="@drawable/ic_food_delivery" />

            <androidx.cardview.widget.CardView
                android:id="@+id/back"
                app:cardCornerRadius="18dp"
                android:backgroundTint="#f3f3f3"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_keyboard_backspace"
                    android:padding="9dp"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome \nBack!"
                android:layout_marginStart="15dp"
                android:textColor="@color/white"
                android:layout_below="@+id/back"
                android:layout_marginTop="20dp"
                android:textSize="30sp"
                android:lineSpacingExtra="0dp"
                android:fontFamily="@font/poppins_medium"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/poppins_medium"
            android:textStyle="normal"
            android:textSize="18sp"
            android:textColor="#0f122f"
            android:text="Click &apos;Next&apos; \nto verify your mobile number"
            />

        <TextView
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/name"
            android:fontFamily="@font/poppins_regular"
            android:textAlignment="center"
            android:padding="18dp"
            android:text="@string/next"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/after_button_bg"
            android:gravity="center_horizontal" />

    </LinearLayout>

</layout>