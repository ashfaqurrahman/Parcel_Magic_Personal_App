<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_marginStart="20dp"
            android:elevation="2dp"
            android:src="@drawable/ic_back_icon_white"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/welcome_bg"
            android:scaleType="fitXY"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/poppins_medium"
        android:textStyle="normal"
        android:textSize="18sp"
        android:textColor="#0f122f"
        android:text="Click &apos;Next&apos; \nto verify your mobile number"
        />

    <TextView
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/name"
        android:fontFamily="@font/poppins_regular"
        android:textAlignment="center"
        android:padding="18dp"
        android:text="@string/next"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/after_button_bg"
        android:gravity="center_horizontal" />

</LinearLayout>