<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.ProfileFragment">

    <include layout="@layout/custom_toolbar_blue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f9faff"
        android:id="@+id/main"
        android:visibility="visible"
        android:layout_below="@+id/top_layout">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical">

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="-95dp">

                <RelativeLayout
                    android:layout_marginTop="40dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/sample_pro_pic"
                        app:civ_border_width="2dp"
                        android:layout_marginBottom="5dp"
                        app:civ_border_color="#ffffff"/>
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/image_upload"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:src="@drawable/profile_plus"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:textSize="15sp"
                        android:textColor="#111329"
                        android:lineSpacingExtra="10sp"
                        tools:text="Fahim Rana"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:textSize="13sp"
                        android:textColor="#989898"
                        android:lineSpacingExtra="12sp"
                        tools:text="Dhaka, Bangladesh"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtEditProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22dp"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="normal"
                        android:textSize="14sp"
                        android:textColor="#3b5998"
                        android:lineSpacingExtra="11sp"
                        android:text="Edit Profile"
                        />

                </LinearLayout>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="20dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="19dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/call_24_px"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_mobile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:fontFamily="sans-serif"
                            android:textStyle="normal"
                            android:textSize="14sp"
                            android:textColor="#989898"
                            android:lineSpacingExtra="11sp"
                            tools:text="0174 2618 399"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_no_mobile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:fontFamily="sans-serif"
                            android:textStyle="normal"
                            android:textSize="14sp"
                            android:textColor="#989898"
                            android:lineSpacingExtra="11sp"
                            tools:text="0174 2618 399"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="21dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/location_on_24_px_2"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:fontFamily="sans-serif"
                            android:textStyle="normal"
                            android:textSize="14sp"
                            android:textColor="#989898"
                            android:lineSpacingExtra="11sp"
                            tools:text="Dhaka, Bangladesh"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_no_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:fontFamily="sans-serif"
                            android:textStyle="normal"
                            android:textSize="14sp"
                            android:textColor="#989898"
                            android:lineSpacingExtra="11sp"
                            tools:text="Dhaka, Bangladesh"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="21dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/payment_24_px"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_bkash"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginStart="12dp"
                            android:fontFamily="sans-serif"
                            android:textStyle="normal"
                            android:textSize="13sp"
                            android:textColor="#989898"
                            android:lineSpacingExtra="12sp"
                            android:text="Bkash"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_no_bkash"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginStart="12dp"
                            android:fontFamily="sans-serif"
                            android:textStyle="normal"
                            android:textSize="13sp"
                            android:textColor="#989898"
                            android:lineSpacingExtra="12sp"
                            android:text="Bkash"
                            />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="12dp"
                        android:background="#989898"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginTop="21dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/payment_24_px"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_rocket"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:fontFamily="sans-serif"
                            android:textStyle="normal"
                            android:textSize="13sp"
                            android:textColor="#989898"
                            android:lineSpacingExtra="12sp"
                            android:text="DBBL Rocket"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_no_rocket"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:fontFamily="sans-serif"
                            android:textStyle="normal"
                            android:textSize="13sp"
                            android:textColor="#989898"
                            android:lineSpacingExtra="12sp"
                            android:text="DBBL Rocket"
                            />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>