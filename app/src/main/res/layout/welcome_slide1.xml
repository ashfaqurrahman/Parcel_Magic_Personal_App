<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg_gradient_start_end">

    <ImageView
        android:id="@+id/intro_one_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/ic_intro_one_bg" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/intro_one_bg"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="80dp"
        android:src="@drawable/ic_intro_one_car" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/intro_one_bg"
        android:gravity="center">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="25sp"
            android:textStyle="normal"
            android:textColor="#ffffff"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:gravity="center"
            android:text="Fastest Delivery In \nBangladesh"
            />

        <TextView
            android:id="@+id/desc1"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="Blazing fast courier and parcel delivery service in Bangladesh. One stop delivery solution for your growing business."
            />

    </LinearLayout>

</RelativeLayout>