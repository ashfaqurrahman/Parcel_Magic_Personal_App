<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.product.ReceiverAddressFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/back"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="12dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/ic_keyboard_backspace"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/poppins_semibold"
                android:textStyle="normal"
                android:textSize="32sp"
                android:textColor="#1a1a1a"
                tools:text="Who&apos;s receiving the Package"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13sp"
                android:fontFamily="@font/poppins_medium"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#000000"
                android:lineSpacingExtra="12sp"
                tools:text="The driver may contact the recipient to Compete the delivery "
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_medium"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#000000"
                android:lineSpacingExtra="12sp"
                tools:text="Full Name"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:background="@drawable/input_back"
                android:gravity="center_vertical">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:background="@null"
                    android:hint="@string/enter_your_name"
                    android:textColor="#000"
                    android:padding="20dp"
                    android:textSize="14sp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:fontFamily="@font/poppins_medium"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#000000"
                android:lineSpacingExtra="12sp"
                tools:text="Phone Number"
                />

            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:background="@drawable/input_back"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/country_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginStart="15dp"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:textColor="#56586d"
                    android:lineSpacingExtra="5sp"
                    android:text="+88 0"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="#e2e5ff"/>

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:background="@null"
                    android:hint="@string/enter_your_phone_number"
                    android:textColor="#000"
                    android:padding="20dp"
                    android:textSize="14sp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_regular"
                android:textAlignment="center"
                android:padding="18dp"
                android:text="@string/next"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:background="@drawable/before_button_bg"
                android:gravity="center_horizontal" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>