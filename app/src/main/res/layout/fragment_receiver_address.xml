<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.product.ReceiverAddressFragment">

    <include layout="@layout/custom_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/button_bg"
        android:padding="15dp"
        android:orientation="horizontal">

        <SearchView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:gravity="start"
            android:textStyle="normal"
            android:closeIcon="@drawable/ic_close_red"
            android:goIcon="@drawable/ic_edit"
            android:searchIcon="@drawable/ic_location_icon_solid"
            android:textSize="19sp"
            android:textColor="#0f122f"
            android:lineSpacingExtra="18sp"
            tools:text="Rd No. 1/A, Banani"
            android:drawablePadding="15dp"
 />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/button_bg"
        android:padding="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:gravity="start"
            android:textStyle="normal"
            android:textSize="19sp"
            android:textColor="#0f122f"
            android:lineSpacingExtra="18sp"
            tools:text="Set on map"
            android:drawablePadding="15dp"
            app:drawableStartCompat="@drawable/ic_current_location_icon" />

    </LinearLayout>

</LinearLayout>