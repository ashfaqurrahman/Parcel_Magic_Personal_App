<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeFragment"
        android:background="@color/white"
        android:id="@+id/root_layout">

        <androidx.cardview.widget.CardView
            android:id="@+id/cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/text"
                    android:layout_alignStart="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#3c5b9a"
                    android:text="Current Location"
                    />

                <TextView
                    android:id="@+id/address"
                    android:layout_below="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:textStyle="normal"
                    android:textSize="13sp"
                    android:textColor="#0f122f"
                    android:text="@string/searching"
                    android:gravity="center_vertical"
                    android:drawablePadding="5dp"
                    app:drawableEndCompat="@drawable/ic_next" />

                <ImageView
                    android:id="@+id/notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:padding="9dp"
                    android:src="@drawable/ic_notification_icon"
                    android:background="@drawable/circle_solid_gray"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/title"
            android:layout_below="@+id/cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="36sp"
            android:textColor="#0f122f"
            android:text="What are you sending?"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/title"
            android:layout_alignEnd="@+id/title"
            android:layout_alignStart="@+id/title"
            android:weightSum="2"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="7dp"
                android:layout_weight="1"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:id="@+id/product_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/splash_bg_gradient_start_end"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:src="@drawable/ic_product_btn_icon"
                        android:background="@drawable/white_circle_solid"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/nunito_bold"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:lineSpacingExtra="45sp"
                        android:text="Products"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/nunito_semi_bold"
                        android:textStyle="normal"
                        android:textSize="12sp"
                        android:textColor="#ffffff"
                        android:lineSpacingExtra="49sp"
                        android:text="Weight  :  01-03 KG"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/nunito_semi_bold"
                        android:textStyle="normal"
                        android:textSize="12sp"
                        android:textColor="#ffffff"
                        android:lineSpacingExtra="49sp"
                        android:text="Size  :  09-20 CM"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/docs_btn_bg"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:src="@drawable/ic_docs_btn_icon"
                        android:background="@drawable/white_circle_solid"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/nunito_bold"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:lineSpacingExtra="45sp"
                        android:text="Documents"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/nunito_semi_bold"
                        android:textStyle="normal"
                        android:textSize="12sp"
                        android:textColor="#ffffff"
                        android:lineSpacingExtra="49sp"
                        android:text="Weight  :  01-03 KG"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/nunito_semi_bold"
                        android:textStyle="normal"
                        android:textSize="12sp"
                        android:textColor="#ffffff"
                        android:lineSpacingExtra="49sp"
                        android:text="Size  :  09-20 CM"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-20dp"
            android:scaleType="fitXY"
            android:background="@drawable/ic_dashboard_bg"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</layout>