<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeFragment"
        android:background="@color/white"
        android:id="@+id/root_layout">

        <androidx.drawerlayout.widget.DrawerLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/drawer_layout"
            tools:context=".ui.main.MainActivity">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/toolbar_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="39dp"
                            android:paddingBottom="20dp"
                            android:background="#0c5beb">

                            <ImageView
                                android:id="@+id/menu"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginStart="20dp"
                                android:padding="9dp"
                                android:background="@drawable/circle_gradient_center"
                                android:src="@drawable/ic_menu"
                                />

                            <TextView
                                android:id="@+id/what_to_send"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="20dp"
                                android:background="@drawable/button_bg1"
                                android:paddingEnd="18dp"
                                android:paddingStart="18dp"
                                android:paddingTop="9dp"
                                android:paddingBottom="9dp"
                                android:drawablePadding="8dp"
                                android:text="@string/what_to_send"
                                android:textSize="13sp"
                                android:textColor="@color/white"
                                android:fontFamily="@font/poppins_semibold"
                                app:drawableLeftCompat="@drawable/ic_question_mark" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/title1"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:paddingBottom="113dp"
                            android:layout_below="@+id/toolbar_layout"
                            android:background="@drawable/bottom_radius_button_bg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_bold"
                                android:textStyle="bold"
                                android:textSize="26sp"
                                android:textColor="#ffffff"
                                android:lineSpacingExtra="21sp"
                                android:text="@string/quick_delivery_on"
                                />

                            <TextView
                                android:layout_below="@id/title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_bold"
                                android:textSize="36sp"
                                android:textStyle="bold"
                                android:textColor="#ffffff"
                                android:text="@string/the_dhaka_city"
                                />

                        </RelativeLayout>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/delivery_process"
                            android:layout_below="@+id/title1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-90dp"
                            app:cardCornerRadius="20dp"
                            app:cardBackgroundColor="#f6f6f6"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="25dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="20dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:textColor="#1a1a1a"
                                    android:lineSpacingExtra="22sp"
                                    android:text="Delivery Process"
                                    />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:weightSum="2"
                                    android:orientation="horizontal">

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginEnd="7dp"
                                        android:layout_weight="1"
                                        app:cardCornerRadius="15dp">

                                        <LinearLayout
                                            android:id="@+id/express_btn"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:padding="12dp"
                                            android:orientation="vertical">

                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:src="@drawable/ic_express_icon"/>

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="2dp"
                                                android:layout_marginBottom="12dp"
                                                android:fontFamily="@font/poppins_medium"
                                                android:textStyle="normal"
                                                android:textSize="14sp"
                                                android:textColor="#1a1a1a"
                                                android:text="@string/express"
                                                />

                                        </LinearLayout>

                                    </androidx.cardview.widget.CardView>

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginStart="8dp"
                                        android:layout_weight="1"
                                        app:cardCornerRadius="15dp">

                                        <LinearLayout
                                            android:id="@+id/quick_btn"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:padding="12dp"
                                            android:gravity="center"
                                            android:orientation="vertical">

                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:src="@drawable/ic_quick_icon"/>

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="2dp"
                                                android:layout_marginBottom="12dp"
                                                android:fontFamily="@font/poppins_medium"
                                                android:textStyle="normal"
                                                android:textSize="14sp"
                                                android:textColor="#1a1a1a"
                                                android:text="@string/quick"
                                                />

                                        </LinearLayout>

                                    </androidx.cardview.widget.CardView>

                                </LinearLayout>

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/current_location_text"
                            android:layout_marginTop="25dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_below="@+id/delivery_process"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#1a1a1a"
                            android:lineSpacingExtra="22sp"
                            android:text="Current Location"
                            />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/address"
                            android:layout_below="@+id/current_location_text"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            app:cardElevation="0dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginTop="14sp"
                            android:layout_marginBottom="20dp"
                            app:cardCornerRadius="10dp">

                            <fragment
                                android:id="@+id/current_location"
                                android:name="com.google.android.gms.maps.SupportMapFragment"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>

                </ScrollView>

            </RelativeLayout>

            <com.google.android.material.navigation.NavigationView
                android:id="@+id/navigationView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:fitsSystemWindows="true"
                android:divider="@android:color/transparent"
                android:dividerHeight="0dp"
                app:headerLayout="@layout/header_layout"
                app:menu="@menu/drawer_menu" />

        </androidx.drawerlayout.widget.DrawerLayout>

    </RelativeLayout>

</layout>