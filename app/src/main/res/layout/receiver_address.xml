<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            style="@style/top_bar_layout"
            android:orientation="horizontal"
            android:id="@+id/top_layout"
            tools:ignore="RelativeOverlap"
            android:background="@color/top_bar_color">

            <ImageView
                android:id="@+id/backImage"
                android:layout_width="25dp"
                android:padding="5dp"
                android:layout_marginStart="15dp"
                android:layout_centerVertical="true"
                android:layout_height="25dp"
                app:srcCompat="@drawable/ic_back_icon"/>

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/backImage"
                android:layout_marginStart="25dp"
                android:layout_centerVertical="true"
                android:fontFamily="@font/poppins_medium"
                android:textStyle="normal"
                android:textSize="20sp"
                android:textColor="#111329"
                android:lineSpacingExtra="5sp"
                tools:text="Mobile Number"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/from_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_location_icon_solid"/>

    <RelativeLayout
        android:id="@+id/to_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_alignTop="@+id/to"
        android:layout_alignBottom="@+id/to">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/circle_with_border"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:paddingStart="15dp"
        android:paddingEnd="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg"
        android:id="@+id/edit_layout1">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_toStartOf="@+id/loading"
            android:layout_toEndOf="@+id/current_location"
            app:closeIcon="@drawable/ic_close_red"
            app:searchIcon="@null"
            app:iconifiedByDefault="false"
            app:queryHint="Search Here"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_regular"
            app:queryBackground="@null"
            android:textColorHint="@color/black"
            android:textColor="@color/black"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loading"
            android:layout_width="50dp"
            android:layout_alignParentEnd="true"
            app:lottie_rawRes="@raw/loading"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"/>

        <ImageView
            android:id="@+id/current_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_location_icon_solid"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/button_bg"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="12dp">

        <TextView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="15dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center_vertical"
            android:textColor="#0f122f"
            android:textSize="19sp"
            android:textStyle="normal"
            app:drawableStartCompat="@drawable/ic_current_location_icon"
            android:text="Set on map" />

    </LinearLayout>

</LinearLayout>